  "techStack": {
    "framework": "Next.js 14+ (App Router)",
    "language": "TypeScript",
    "styling": "CSS Modules + Design Tokens",
    "stateManagement": "React Context + Hooks",
    "routing": "Next.js App Router"
  },
  "accessibility": {
    "requirements": ["WCAG 2.1 AA", "Keyboard Navigation", "Focus Management", "ARIA Labels"],
    "modals": ["Focus trap", "Escape to close", "Click outside to close"]
