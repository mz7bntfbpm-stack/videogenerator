        "CreateFromTemplateModal": {"props": ["template", "onSubmit"]}
      },
      "myVideos": {
        "FiltersBar": {"props": ["filters", "onApply"]},
        "VideoList": {"props": ["videos", "onView", "onDownload"]},
        "VideoDetailsModal": {"props": ["video", "onClose", "actions"]},
        "DuplicateAndEditModal": {"props": ["video", "onSubmit"]},
        "DeleteVideoModal": {"props": ["video", "onConfirm"]}
      },
      "templates": {
        "TopControlsBar": {"props": ["onNew", "onSearch", "onFilter"]},
        "TemplatesList": {"props": ["templates", "onUse", "onEdit", "onDelete"]},
        "CreateTemplateModal": {"props": ["onSubmit"]},
        "EditTemplateModal": {"props": ["template", "onSave"]},
        "DeleteTemplateModal": {"props": ["template", "onConfirm"]},
        "CreateVideoFromTemplateModal": {"props": ["template", "onSubmit"]}
      },
      "usage": {
        "SummaryStatistics": {"props": ["stats"]},
        "RecentActivity": {"props": ["activity"]},
        "UsageBreakdowns": {"props": ["byStyle", "byAspect"]},
        "QuickActions": {"props": ["actions"]}
      },
      "account": {
        "ProfileSection": {"props": ["email", "displayName", "onSave"]},
        "SecuritySection": {"props": ["onChangePassword"]},
        "YourDataSection": {"props": ["description"]},
        "DangerZone": {"props": ["onDeleteAccount"]},
        "QuickLinks": {"props": ["links"]},
        "ChangePasswordModal": {"props": ["onSubmit"]},
        "DeleteAccountModal": {"props": ["onConfirm"]}
      }
    }
  },
  "routeMap": {
    "/": {"page": "index", "layout": "PageShell"},
    "/dashboard": {"page": "dashboard", "layout": "PageShell"},
    "/my-videos": {"page": "myVideos", "layout": "PageShell"},
    "/templates": {"page": "templates", "layout": "PageShell"},
    "/usage": {"page": "usage", "layout": "PageShell"},
    "/account": {"page": "account", "layout": "PageShell"}
